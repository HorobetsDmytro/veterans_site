@using veterans_site.Extensions

@{
    ViewData["Title"] = "Головна сторінка";
}

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <style>
        .hero-section {
            position: relative;
            min-height: 100vh;
            background: linear-gradient(rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.7)), url('/images/hero-bg.jpg');
            background-size: cover;
            background-position: center;
            background-attachment: fixed;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            text-align: center;
            padding: 2rem 0;
        }

        .hero-content {
            max-width: 800px;
            padding: 2rem;
            /*animation: fadeIn 1s ease-out;*/
        }

        .hero-title {
            font-size: 4rem;
            font-weight: 700;
            margin-bottom: 1.5rem;
            line-height: 1.2;
        }

        .hero-subtitle {
            font-size: 1.5rem;
            margin-bottom: 2rem;
            opacity: 0.9;
        }

        .hero-buttons {
            display: flex;
            gap: 1rem;
            justify-content: center;
            margin-top: 2rem;
        }

        .hero-btn {
            padding: 1rem 2.5rem;
            font-size: 1.1rem;
            font-weight: 500;
            border-radius: 50px;
            text-transform: uppercase;
            letter-spacing: 1px;
            transition: all 0.3s ease;
            text-decoration: none !important;
        }

        .hero-btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
            text-decoration: none !important;
        }

        .hero-btn-primary {
            background: #0d6efd;
            border: none;
            color: white !important;
        }

        .hero-btn-primary:hover {
            color: white !important;
        }

        .hero-btn-outline {
            background: transparent;
            border: 2px solid white;
            color: white !important;
        }

        .hero-btn-outline:hover {
            background: white;
            color: #0d6efd !important;
            text-decoration: none !important;
        }

        .parallax-bg {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            transform: translateZ(-1px) scale(1.2);
        }

        .z-1 { z-index: 1; }
        .z-2 { z-index: 2; }

        .service-card {
            transition: all 0.3s ease;
            overflow: hidden;
        }

        .service-card:hover {
            transform: translateY(-10px);
        }

        .service-icon {
            width: 70px;
            height: 70px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        /* Utility Classes */
        .py-6 { 
            padding-top: 5rem; 
            padding-bottom: 5rem; 
        }
        .mb-6 { 
            margin-bottom: 5rem; 
        }

        .shadow-hover {
            transition: all 0.3s ease;
        }

        .shadow-hover:hover {
            box-shadow: 0 1rem 3rem rgba(0,0,0,.175)!important;
        }

        .transition-300 {
            transition: all 0.3s ease;
        }

        /* Latest News Cards */
        .news-card {
            overflow: hidden;
        }

        .news-card img {
            transition: transform 0.3s ease;
        }

        .news-card:hover img {
            transform: scale(1.1);
        }

        /* Consultation Types */
        /* .consultation-type {
            transition: all 0.3s ease;
        }

        .consultation-type:hover .rounded-circle {
            background-color: var(--bs-primary)!important;
            color: white!important;
        } */

        .consultation-type {
            transition: all 0.3s ease;
        }

            .consultation-type:hover {
                transform: translateY(-10px);
            }

        .icon-wrapper {
            transition: all 0.3s ease;
        }

        .consultation-type:hover .icon-wrapper {
            background-color: var(--bs-primary) !important;
        }

        .icon-main {
            transition: all 0.3s ease;
        }

        .consultation-type:hover .icon-main {
            color: white !important;
        }

        .shadow-hover {
            transition: all 0.3s ease;
        }

            .shadow-hover:hover {
                box-shadow: 0 1rem 3rem rgba(0,0,0,.175) !important;
            }

        .statistics-section {
            background: linear-gradient(45deg, #0d6efd, #0a58ca);
            padding: 5rem 0;
            color: white;
        }

        .stat-item {
            text-align: center;
            padding: 2rem;
            border-radius: 1rem;
            transition: all 0.3s ease;
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(5px);
        }

            .stat-item:hover {
                transform: translateY(-10px);
                background: rgba(255, 255, 255, 0.15);
            }

        .stat-number {
            font-size: 3.5rem;
            font-weight: 800;
            margin-bottom: 1rem;
            background: linear-gradient(45deg, #ffffff, #e6e6e6);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            display: inline-block;
        }

        .stat-icon {
            font-size: 2.5rem;
            margin-bottom: 1.5rem;
            color: rgba(255, 255, 255, 0.9);
        }

        .stat-label {
            font-size: 1.1rem;
            opacity: 0.9;
            font-weight: 500;
            line-height: 1.4;
        }

        .carousel-control-prev,
        .carousel-control-next {
            width: 40px;
            height: 40px;
            top: 50%;
            transform: translateY(-50%);
            opacity: 1;
            margin: 0 -20px;
        }

        .carousel-nav-button {
            width: 40px;
            height: 40px;
            background: white;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #0d6efd;
            transition: all 0.3s ease;
        }

            .carousel-nav-button:hover {
                background: #0d6efd;
                color: white;
            }

        .card.shadow-hover {
            transition: all 0.3s ease;
        }

            .card.shadow-hover:hover {
                transform: translateY(-5px);
                box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.08) !important;
            }

        .badge {
            font-size: 0.8rem;
            padding: 0.5em 1em;
        }

        .card-title {
            font-size: 1.1rem;
            font-weight: 600;
            line-height: 1.4;
        }

        .text-muted {
            font-size: 0.9rem;
        }

        .btn-outline-primary {
            padding: 0.5rem 1.25rem;
            font-size: 0.9rem;
        }
    </style>
}

<!-- Hero Section -->
<section class="hero-section">
    <div class="hero-content container">
        <h1 class="hero-title">
            Підтримка Ветеранів України
        </h1>
        <p class="hero-subtitle">
            Платформа для надання всебічної допомоги та підтримки ветеранам
        </p>
        <div class="hero-buttons">
            <a href="#services" class="hero-btn hero-btn-outline">
                <i class="fas fa-chevron-down me-2"></i>
                ДІЗНАТИСЬ БІЛЬШЕ
            </a>
            <a asp-controller="Consultations" asp-action="Index" class="hero-btn hero-btn-primary">
                <i class="fas fa-calendar-check me-2"></i>
                ЗАПИСАТИСЬ НА КОНСУЛЬТАЦІЮ
            </a>
        </div>
    </div>
</section>

<!-- Services Section -->
<section id="services" class="py-6 bg-light">
    <div class="container">
        <div class="text-center mb-6">
            <h6 class="text-primary text-uppercase fw-bold mb-3">Наші послуги</h6>
            <h2 class="display-5 fw-bold mb-4">Що ми пропонуємо</h2>
            <div class="mx-auto" style="max-width: 600px;">
                <p class="text-muted lead">Ми надаємо комплексну підтримку ветеранам через різноманітні послуги та заходи</p>
            </div>
        </div>

        <div class="row g-4">
            <div class="col-lg-4">
                <div class="card service-card h-100 border-0 shadow-hover transition-300">
                    <div class="card-body p-5 text-center">
                        <div class="service-icon bg-primary bg-opacity-10 text-primary rounded-circle p-3 mb-4 mx-auto">
                            <i class="fas fa-calendar-alt fa-2x"></i>
                        </div>
                        <h4 class="mb-3">Події та Заходи</h4>
                        <p class="text-muted mb-4">Регулярні зустрічі, тренінги та соціальні заходи для ветеранів. Можливість спілкування та обміну досвідом.</p>
                        <a asp-controller="Events" asp-action="Index" class="btn btn-link text-primary p-0">
                            Переглянути події <i class="fas fa-arrow-right ms-2"></i>
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card service-card h-100 border-0 shadow-hover transition-300">
                    <div class="card-body p-5 text-center">
                        <div class="service-icon bg-primary bg-opacity-10 text-primary rounded-circle p-3 mb-4 mx-auto">
                            <i class="fas fa-user-md fa-2x"></i>
                        </div>
                        <h4 class="mb-3">Консультації</h4>
                        <p class="text-muted mb-4">Професійні консультації від кваліфікованих спеціалістів у сферах медицини, психології та права.</p>
                        <a asp-controller="Consultations" asp-action="Index" class="btn btn-link text-primary p-0">
                            Записатись <i class="fas fa-arrow-right ms-2"></i>
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card service-card h-100 border-0 shadow-hover transition-300 d-flex flex-column">
                    <div class="card-body p-5 text-center d-flex flex-column">
                        <div class="service-icon bg-primary bg-opacity-10 text-primary rounded-circle p-3 mb-4 mx-auto">
                            <i class="fas fa-newspaper fa-2x"></i>
                        </div>
                        <h4 class="mb-3">Новини</h4>
                        <p class="text-muted mb-4">Актуальні новини та важлива інформація для ветеранів. Будьте в курсі останніх подій та змін.</p>
                        <div class="mt-auto">
                            <a asp-controller="News" asp-action="Index" class="btn btn-link text-primary p-0">
                                Читати новини <i class="fas fa-arrow-right ms-2"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Latest News Section -->
<section class="py-6">
    <div class="container">
        <div class="text-center mb-6">
            <h6 class="text-primary text-uppercase fw-bold mb-3">Останні новини</h6>
            <h2 class="display-5 fw-bold mb-4">Будьте в курсі подій</h2>
        </div>

        <div class="row g-4">
            @foreach (var news in ViewBag.LatestNews ?? new List<News>())
            {
                <div class="col-lg-4">
                    <div class="card news-card h-100 border-0 shadow-hover d-flex flex-column">
                        <div class="overflow-hidden">
                            @if (!string.IsNullOrEmpty(news.ImagePath))
                            {
                                <img src="@news.ImagePath" class="card-img-top" alt="@news.Title"
                                     style="height: 250px; object-fit: cover;">
                            }
                        </div>
                        <div class="card-body d-flex flex-column p-4">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <span class="badge bg-primary rounded-pill px-3">Новина</span>
                                <small class="text-muted">@news.PublishDate.ToString("dd.MM.yyyy")</small>
                            </div>
                            <h5 class="card-title mb-3">@news.Title</h5>
                            <div class="mt-auto">
                                <a asp-controller="News" asp-action="Details" asp-route-id="@news.Id"
                                   class="btn btn-link text-primary p-0">
                                    Читати далі <i class="fas fa-long-arrow-alt-right ms-2"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="text-center mt-5">
            <a asp-controller="News" asp-action="Index" class="btn btn-outline-primary btn-lg rounded-pill px-5">
                Всі новини <i class="fas fa-arrow-right ms-2"></i>
            </a>
        </div>
    </div>
</section>

<!-- Events Section -->
<section class="py-6 bg-light">
    <div class="container">
        <div class="text-center mb-6">
            <h6 class="text-primary text-uppercase fw-bold mb-3">ПОДІЇ</h6>
            <h2 class="display-5 fw-bold">Найближчі Події</h2>
        </div>

        <div class="position-relative px-5">
            @if (ViewBag.UpcomingEvents != null && ((List<Event>)ViewBag.UpcomingEvents).Any())
            {
                <div id="eventsCarousel" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-inner">
                        @{
                            var events = ((List<Event>)ViewBag.UpcomingEvents)
                            .OrderBy(e => e.Date)
                            .ToList();

                            for (int i = 0; i < events.Count; i += 2)
                            {
                                <div class="carousel-item @(i == 0 ? "active" : "")">
                                    <div class="row g-4">
                                        @{
                                            var firstEvent = events[i];
                                            <div class="col-md-6">
                                                <div class="card border-0 shadow-hover h-100">
                                                    <div class="card-body p-4">
                                                        <div class="d-flex align-items-center mb-3">
                                                            <span class="badge bg-primary rounded-pill me-2">
                                                                @(firstEvent.Category.GetDisplayName())
                                                            </span>
                                                            <span class="text-muted ms-auto">
                                                                <i class="far fa-calendar-alt me-1"></i>
                                                                @firstEvent.Date.ToString("dd.MM.yyyy")
                                                            </span>
                                                        </div>
                                                        <h5 class="card-title mb-3">@firstEvent.Title</h5>
                                                        <div class="d-flex align-items-center text-muted mb-2">
                                                            <i class="fas fa-clock me-2"></i>
                                                            <span>@firstEvent.Date.ToString("HH:mm")</span>
                                                        </div>
                                                        <div class="d-flex align-items-center text-muted mb-3">
                                                            <i class="fas fa-map-marker-alt me-2"></i>
                                                            <span>@firstEvent.Location</span>
                                                        </div>
                                                        <a asp-controller="Events" asp-action="Details" asp-route-id="@firstEvent.Id"
                                                           class="btn btn-outline-primary rounded-pill mt-auto">
                                                            Деталі події <i class="fas fa-arrow-right ms-1"></i>
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>

                                            if (i + 1 < events.Count)
                                            {
                                                var secondEvent = events[i + 1];
                                                <div class="col-md-6">
                                                    <div class="card border-0 shadow-hover h-100">
                                                        <div class="card-body p-4">
                                                            <div class="d-flex align-items-center mb-3">
                                                                <span class="badge bg-primary rounded-pill me-2">
                                                                    @(secondEvent.Category.GetDisplayName())
                                                                </span>
                                                                <span class="text-muted ms-auto">
                                                                    <i class="far fa-calendar-alt me-1"></i>
                                                                    @secondEvent.Date.ToString("dd.MM.yyyy")
                                                                </span>
                                                            </div>
                                                            <h5 class="card-title mb-3">@secondEvent.Title</h5>
                                                            <div class="d-flex align-items-center text-muted mb-2">
                                                                <i class="fas fa-clock me-2"></i>
                                                                <span>@secondEvent.Date.ToString("HH:mm")</span>
                                                            </div>
                                                            <div class="d-flex align-items-center text-muted mb-3">
                                                                <i class="fas fa-map-marker-alt me-2"></i>
                                                                <span>@secondEvent.Location</span>
                                                            </div>
                                                            <a asp-controller="Events" asp-action="Details" asp-route-id="@secondEvent.Id"
                                                               class="btn btn-outline-primary rounded-pill mt-auto">
                                                                Деталі події <i class="fas fa-arrow-right ms-1"></i>
                                                            </a>
                                                        </div>
                                                    </div>
                                                </div>
                                            }
                                        }
                                    </div>
                                </div>
                            }
                        }
                    </div>
                </div>

                <!-- Кнопки навігації -->
                <button class="carousel-control-prev" type="button" data-bs-target="#eventsCarousel" data-bs-slide="prev">
                    <div class="carousel-nav-button shadow">
                        <i class="fas fa-chevron-left"></i>
                    </div>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#eventsCarousel" data-bs-slide="next">
                    <div class="carousel-nav-button shadow">
                        <i class="fas fa-chevron-right"></i>
                    </div>
                </button>
            }
            else
            {
                <div class="alert alert-info text-center">
                    <i class="fas fa-info-circle me-2"></i>
                    Наразі немає запланованих подій
                </div>
            }
        </div>

        <div class="text-center mt-5">
            <a asp-controller="Events" asp-action="Index" class="btn btn-outline-primary rounded-pill px-4">
                Всі події <i class="fas fa-arrow-right ms-2"></i>
            </a>
        </div>
    </div>
</section>

