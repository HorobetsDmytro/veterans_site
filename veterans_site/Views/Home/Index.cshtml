@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using veterans_site.Extensions
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "Головна сторінка | Ветеран Хаб";
}

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <style>
        .hero-section {
            position: relative;
            min-height: 85vh;
            background: linear-gradient(rgba(0, 0, 0, 0.65), rgba(0, 0, 0, 0.65)), url('/images/hero-bg.jpg');
            background-size: cover;
            background-position: center;
            color: white;
            display: flex;
            align-items: center;
            text-align: center;
            padding: 2rem 0;
            margin-top: -24px;
        }

        .hero-content {
            max-width: 900px;
            padding: 2rem;
            animation: fadeIn 1.5s ease-out;
        }

        .hero-title {
            font-size: 3.5rem;
            font-weight: 800;
            margin-bottom: 1.5rem;
            line-height: 1.2;
            text-shadow: 0 2px 10px rgba(0, 0, 0, 0.3);
        }

        .hero-subtitle {
            font-size: 1.4rem;
            margin-bottom: 2rem;
            opacity: 0.95;
            text-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
            font-weight: 300;
            line-height: 1.6;
        }

        .hero-buttons {
            display: flex;
            gap: 1rem;
            justify-content: center;
            margin-top: 2.5rem;
        }

        .hero-btn {
            padding: 1rem 2rem;
            font-size: 1rem;
            font-weight: 600;
            border-radius: 50px;
            letter-spacing: 1px;
            transition: all 0.3s ease;
            text-decoration: none !important;
            display: inline-flex;
            align-items: center;
            justify-content: center;
        }

        .hero-btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
        }

        .hero-btn-primary {
            background: #2e51a2;
            border: none;
            color: white !important;
        }

        .hero-btn-primary:hover {
            background: #1d3e8a;
        }

        .hero-btn-secondary {
            background: #f8ce46;
            border: none;
            color: #293241 !important;
        }

        .hero-btn-secondary:hover {
            background: #e9bd32;
        }

        .hero-badge {
            display: inline-block;
            background-color: #f8ce46;
            color: #293241;
            font-weight: 600;
            padding: 0.5rem 1.5rem;
            border-radius: 50px;
            margin-bottom: 1.5rem;
            text-transform: uppercase;
            letter-spacing: 1px;
            font-size: 0.9rem;
        }

        .services-section {
            padding: 6rem 0;
            background-color: white;
        }

        .section-title {
            position: relative;
            margin-bottom: 3rem;
            text-align: center;
        }

        .section-title h6 {
            color: #2e51a2;
            text-transform: uppercase;
            font-weight: 700;
            letter-spacing: 2px;
            margin-bottom: 1rem;
        }

        .section-title h2 {
            font-size: 2.5rem;
            font-weight: 700;
            margin-bottom: 1.5rem;
            color: #293241;
        }

        .section-title::after {
            content: "";
            position: absolute;
            width: 80px;
            height: 4px;
            background-color: #f8ce46;
            bottom: -15px;
            left: 50%;
            transform: translateX(-50%);
            border-radius: 2px;
        }

        .service-card {
            padding: 2.5rem;
            border-radius: 12px;
            transition: all 0.4s ease;
            border: none;
            height: 100%;
            position: relative;
            overflow: hidden;
            z-index: 1;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
        }

        .service-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: #2e51a2;
            transition: all 0.4s ease;
            z-index: -1;
            opacity: 0;
        }

        .service-card:hover {
            transform: translateY(-15px);
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);
        }

        .service-card:hover::before {
            opacity: 0.03;
        }

        .service-icon {
            width: 80px;
            height: 80px;
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: rgba(46, 81, 162, 0.1);
            border-radius: 50%;
            margin-bottom: 1.5rem;
            color: #2e51a2;
            font-size: 2rem;
            transition: all 0.4s ease;
        }

        .service-card:hover .service-icon {
            background-color: #2e51a2;
            color: white;
            transform: rotateY(180deg);
        }

        .service-title {
            font-size: 1.4rem;
            font-weight: 700;
            margin-bottom: 1rem;
            color: #293241;
        }

        .service-text {
            color: #555;
            margin-bottom: 1.5rem;
            font-size: 1rem;
            line-height: 1.7;
        }

        .service-link {
            color: #2e51a2;
            font-weight: 600;
            display: inline-flex;
            align-items: center;
            transition: all 0.3s ease;
        }

        .service-link:hover {
            color: #1d3e8a;
            transform: translateX(5px);
        }

        .news-section {
            padding: 6rem 0;
            background-color: #f8f9fa;
        }

        .news-card {
            border: none;
            border-radius: 12px;
            overflow: hidden;
            transition: all 0.3s ease;
            height: 100%;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
        }

        .news-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
        }

        .news-img-container {
            height: 220px;
            overflow: hidden;
        }

        .news-card img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.6s ease;
        }

        .news-card:hover img {
            transform: scale(1.1);
        }

        .news-content {
            padding: 1.5rem;
        }

        .news-category {
            background-color: #2e51a2;
            color: white;
            padding: 0.4rem 1rem;
            border-radius: 50px;
            font-size: 0.8rem;
            font-weight: 600;
        }

        .news-date {
            color: #6c757d;
            font-size: 0.9rem;
        }

        .news-title {
            font-size: 1.2rem;
            font-weight: 700;
            line-height: 1.4;
            margin: 1rem 0;
            min-height: 60px;
        }

        .news-link {
            color: #2e51a2;
            font-weight: 600;
            display: inline-flex;
            align-items: center;
            transition: all 0.3s ease;
        }

        .news-link:hover {
            color: #1d3e8a;
            transform: translateX(5px);
        }

        .events-section {
            padding: 6rem 0;
            background-color: white;
        }

        .event-card {
            border: none;
            border-radius: 12px;
            overflow: hidden;
            transition: all 0.3s ease;
            height: 100%;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
        }

        .event-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
        }

        .event-date-badge {
            position: absolute;
            top: 20px;
            left: 20px;
            width: 60px;
            height: 60px;
            background-color: #f8ce46;
            color: #293241;
            border-radius: 8px;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            font-weight: 700;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        }

        .event-day {
            font-size: 1.4rem;
            line-height: 1;
        }

        .event-month {
            font-size: 0.9rem;
            text-transform: uppercase;
        }

        .event-content {
            padding: 1.5rem;
        }

        .event-time-location {
            color: #6c757d;
            font-size: 0.9rem;
        }

        .event-title {
            font-size: 1.3rem;
            font-weight: 700;
            line-height: 1.4;
            margin: 0.5rem 0 1rem;
        }

        .event-description {
            color: #6c757d;
            margin-bottom: 1.5rem;
            font-size: 0.95rem;
            min-height: 70px;
        }

        .event-category {
            background-color: rgba(46, 81, 162, 0.1);
            color: #2e51a2;
            padding: 0.3rem 0.8rem;
            border-radius: 50px;
            font-size: 0.8rem;
            font-weight: 600;
            display: inline-block;
            margin-bottom: 0.5rem;
        }

        .consultation-section {
            padding: 6rem 0;
            background-color: #f8f9fa;
        }

        .consultation-card {
            padding: 3rem 2rem;
            border-radius: 12px;
            transition: all 0.4s ease;
            border: none;
            height: 100%;
            text-align: center;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
            position: relative;
            overflow: hidden;
            z-index: 1;
        }

        .consultation-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: #2e51a2;
            transition: all 0.4s ease;
            z-index: -1;
            opacity: 0;
        }

        .consultation-card:hover {
            transform: translateY(-15px);
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);
        }

        .consultation-card:hover::before {
            opacity: 1;
        }

        .consultation-icon {
            width: 100px;
            height: 100px;
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: rgba(46, 81, 162, 0.1);
            border-radius: 50%;
            margin: 0 auto 2rem;
            color: #2e51a2;
            font-size: 2.5rem;
            transition: all 0.4s ease;
        }

        .consultation-card:hover .consultation-icon {
            background-color: white;
            color: #2e51a2;
            transform: scale(0.9);
        }

        .consultation-title {
            font-size: 1.4rem;
            font-weight: 700;
            margin-bottom: 1rem;
            color: #293241;
            transition: all 0.3s ease;
        }

        .consultation-card:hover .consultation-title {
            color: white;
        }
        
        .consultation-text {
            color: #555;
            margin-bottom: 1.5rem;
            font-size: 1rem;
            line-height: 1.7;
            transition: all 0.3s ease;
        }

        .consultation-card:hover .consultation-text {
            color: rgba(255, 255, 255, 0.9);
        }

        .statistics-section {
            padding: 5rem 0;
            background: linear-gradient(45deg, #293241, #2e51a2);
            color: white;
            position: relative;
            overflow: hidden;
        }

        .statistics-section::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            opacity: 0.05;
            background-size: cover;
        }

        .statistic-item {
            text-align: center;
            padding: 2rem;
            border-radius: 1rem;
            transition: all 0.3s ease;
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(5px);
            height: 100%;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }

        .statistic-item:hover {
            transform: translateY(-10px);
            background: rgba(255, 255, 255, 0.15);
        }

        .statistic-icon {
            font-size: 2.5rem;
            margin-bottom: 1.5rem;
            background-color: #f8ce46;
            width: 80px;
            height: 80px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #293241;
            transition: all 0.3s ease;
        }

        .statistic-item:hover .statistic-icon {
            transform: rotateY(180deg);
        }

        .statistic-number {
            font-size: 3rem;
            font-weight: 800;
            margin-bottom: 0.5rem;
            background: linear-gradient(45deg, #ffffff, #e6e6e6);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            display: inline-block;
        }

        .statistic-label {
            font-size: 1.1rem;
            opacity: 0.9;
            font-weight: 500;
            line-height: 1.4;
        }

        .cta-section {
            padding: 4rem 0;
            background-color: #2e51a2;
            color: white;
            text-align: center;
        }

        .cta-title {
            font-size: 2.5rem;
            font-weight: 700;
            margin-bottom: 1.5rem;
        }

        .cta-text {
            font-size: 1.2rem;
            opacity: 0.9;
            max-width: 700px;
            margin: 0 auto 2rem;
        }

        .cta-button {
            background-color: #f8ce46;
            color: #293241 !important;
            font-size: 1.1rem;
            font-weight: 600;
            padding: 1rem 2.5rem;
            border-radius: 50px;
            display: inline-flex;
            align-items: center;
            transition: all 0.3s ease;
        }

        .cta-button:hover {
            background-color: white;
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
        }
    </style>
}

<section class="hero-section">
    <div class="container hero-content">
        <span class="hero-badge animate__animated animate__fadeInDown">Підтримка ветеранів</span>
        <h1 class="hero-title animate__animated animate__fadeInUp">Ветеран Хаб - Єдина Платформа Підтримки</h1>
        <p class="hero-subtitle animate__animated animate__fadeInUp animate__delay-1s">
            Наша місія - створити комплексну систему підтримки ветеранів України через надання якісних послуг,
            інформації та можливостей для спілкування та інтеграції
        </p>
        <div class="hero-buttons animate__animated animate__fadeInUp animate__delay-2s">
            <a href="#services" class="hero-btn hero-btn-secondary">
                <i class="fas fa-info-circle me-2"></i> Наші послуги
            </a>
            <a asp-controller="Consultations" asp-action="Index" class="hero-btn hero-btn-primary">
                <i class="fas fa-handshake me-2"></i> Отримати допомогу
            </a>
        </div>
    </div>
</section>

<section id="services" class="services-section">
    <div class="container">
        <div class="section-title">
            <h6>Наша діяльність</h6>
            <h2>Комплексна Підтримка Ветеранів</h2>
            <p class="text-muted">Ми створили платформу для всебічної підтримки тих, хто захищав нашу країну</p>
        </div>

        <div class="row g-4">
            <div class="col-lg-4 col-md-6">
                <div class="service-card">
                    <div class="service-icon">
                        <i class="fas fa-calendar-alt"></i>
                    </div>
                    <h3 class="service-title">Події та Заходи</h3>
                    <p class="service-text">
                        Зустрічі, тренінги, культурні та спортивні події для ветеранів. 
                        Можливість соціалізації та інтеграції в спільноту.
                    </p>
                    <a asp-controller="Events" asp-action="Index" class="service-link">
                        Переглянути події <i class="fas fa-arrow-right ms-2"></i>
                    </a>
                </div>
            </div>

            <div class="col-lg-4 col-md-6">
                <div class="service-card">
                    <div class="service-icon">
                        <i class="fas fa-user-md"></i>
                    </div>
                    <h3 class="service-title">Фахові Консультації</h3>
                    <p class="service-text">
                        Професійні консультації від кваліфікованих спеціалістів у сферах 
                        медицини, психології та права.
                    </p>
                    <a asp-controller="Consultations" asp-action="Index" class="service-link">
                        Записатись на консультацію <i class="fas fa-arrow-right ms-2"></i>
                    </a>
                </div>
            </div>

            <div class="col-lg-4 col-md-6">
                <div class="service-card">
                    <div class="service-icon">
                        <i class="fas fa-newspaper"></i>
                    </div>
                    <h3 class="service-title">Новини та Інформація</h3>
                    <p class="service-text">
                        Актуальні новини та важлива інформація для ветеранів. 
                        Будьте в курсі останніх подій та законодавчих змін.
                    </p>
                    <a asp-controller="News" asp-action="Index" class="service-link">
                        Читати новини <i class="fas fa-arrow-right ms-2"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="news-section">
    <div class="container">
        <div class="section-title">
            <h6>Новини та Оновлення</h6>
            <h2>Останні Новини</h2>
            <p class="text-muted">Будьте в курсі важливих подій та корисної інформації</p>
        </div>

        <div class="row g-4">
            @if (ViewBag.LatestNews != null && ((List<News>)ViewBag.LatestNews).Any())
            {
                @foreach (var news in ViewBag.LatestNews)
                {
                    <div class="col-lg-4 col-md-6">
                        <div class="news-card h-100 d-flex flex-column">
                            <div class="news-img-container">
                                @if (!string.IsNullOrEmpty(news.ImagePath))
                                {
                                    <img src="@news.ImagePath" alt="@news.Title" class="img-fluid">
                                }
                                else
                                {
                                    <img src="/images/news-placeholder.jpg" alt="Новини" class="img-fluid">
                                }
                            </div>
                            <div class="news-content flex-grow-1 d-flex flex-column">
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <span class="news-category">Новина</span>
                                    <span class="news-date">
                                        <i class="far fa-calendar-alt me-1"></i> @news.PublishDate.ToString("dd.MM.yyyy")
                                    </span>
                                </div>
                                <h4 class="news-title mb-3">@news.Title</h4>
                                <div class="mt-auto">
                                    <a asp-controller="News" asp-action="Details" asp-route-id="@news.Id" class="news-link d-inline-flex align-items-center">
                                        Читати повністю <i class="fas fa-arrow-right ms-2"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-12">
                    <div class="alert alert-info text-center">
                        <i class="fas fa-info-circle me-2"></i> Новини скоро з'являться. Слідкуйте за оновленнями.
                    </div>
                </div>
            }
        </div>

        <div class="text-center mt-5">
            <a asp-controller="News" asp-action="Index" class="btn btn-outline-primary rounded-pill px-4 py-2">
                Переглянути всі новини <i class="fas fa-arrow-right ms-2"></i>
            </a>
        </div>
    </div>
</section>

<section class="events-section">
    <div class="container">
        <div class="section-title">
            <h6>Календар Подій</h6>
            <h2>Найближчі Заходи</h2>
            <p class="text-muted">Долучайтесь до наших заходів та станьте частиною спільноти</p>
        </div>

        <div class="row g-4">
            @if (ViewBag.UpcomingEvents != null && ((List<Event>)ViewBag.UpcomingEvents).Any())
            {
                var upcomingEvents = ((List<Event>)ViewBag.UpcomingEvents)
                    .OrderBy(e => e.Date)
                    .Take(3)
                    .ToList();

                foreach (var evt in upcomingEvents)
                {
                    <div class="col-lg-4 col-md-6">
                        <div class="event-card position-relative d-flex flex-column h-100">
                            <div class="text-center mt-4">
                                <span class="event-category badge bg-light text-primary">@evt.Category.GetDisplayName()</span>
                            </div>
                            
                            <div class="event-date-badge position-absolute top-0 start-0 m-3 z-3">
                                <span class="event-day d-block">@evt.Date.Day</span>
                                <span class="event-month d-block">@evt.Date.ToString("MMM").ToUpper()</span>
                            </div>

                            <div class="event-content p-4 pt-3 d-flex flex-column flex-grow-1">
                                <h4 class="event-title mb-3">@evt.Title</h4>
                                <div class="event-time-location mb-3">
                                    <div class="d-flex align-items-center mb-2">
                                        <i class="fas fa-clock me-2 text-primary"></i>
                                        <span>@evt.Date.ToString("HH:mm")</span>
                                    </div>
                                    <div class="d-flex align-items-center">
                                        <i class="fas fa-map-marker-alt me-2 text-primary"></i>
                                        <span>@evt.Location</span>
                                    </div>
                                </div>
                                <p class="event-description flex-grow-1">
                                    @(evt.Description != null && evt.Description.Length > 100
                                        ? evt.Description.Substring(0, 100) + "..."
                                        : evt.Description)
                                </p>
                                <div class="mt-auto">
                                    <a asp-controller="Events" asp-action="Details" asp-route-id="@evt.Id"
                                       class="btn btn-outline-primary rounded-pill w-100">
                                        Деталі події <i class="fas fa-arrow-right ms-2"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-12">
                    <div class="alert alert-info text-center">
                        <i class="fas fa-info-circle me-2"></i> Наразі немає запланованих подій. Слідкуйте за оновленнями.
                    </div>
                </div>
            }
        </div>

        <div class="text-center mt-5">
            <a asp-controller="Events" asp-action="Index" class="btn btn-outline-primary rounded-pill px-4 py-2">
                Переглянути всі події <i class="fas fa-arrow-right ms-2"></i>
            </a>
        </div>
    </div>
</section>

<section class="consultation-section">
    <div class="container">
        <div class="section-title">
            <h6>Консультації для Ветеранів</h6>
            <h2>Фахова Допомога</h2>
