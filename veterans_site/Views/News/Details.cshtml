@* Views/News/Details.cshtml *@
@model veterans_site.ViewModels.NewsDetailsViewModel
@{
    ViewData["Title"] = Model.News.Title;
}

<div class="container mt-5">
    <div class="row">
        <!-- Основний контент -->
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <nav aria-label="breadcrumb" class="mb-4">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Головна</a></li>
                            <li class="breadcrumb-item"><a asp-controller="News" asp-action="Index">Новини</a></li>
                            <li class="breadcrumb-item active" aria-current="page">@Model.News.Title</li>
                        </ol>
                    </nav>

                    <h1 class="card-title h2 mb-4">@Model.News.Title</h1>

                    <div class="text-muted mb-4">
                        <i class="far fa-calendar-alt"></i>
                        @Model.News.PublishDate.ToString("dd MMMM yyyy, HH:mm")
                    </div>

                    @if (!string.IsNullOrEmpty(Model.News.ImagePath))
                    {
                        <div class="mb-4">
                            <img src="@Model.News.ImagePath" class="img-fluid rounded" alt="@Model.News.Title">
                        </div>
                    }

                    <div class="news-content">
                        @Html.Raw(Model.News.Content)
                    </div>

                    <!-- Кнопки соціальних мереж -->
                    <div class="mt-4 pt-4 border-top">
                        <h5>Поділитися:</h5>
                        <div class="d-flex gap-2">
                            <a href="#" class="btn btn-outline-primary">
                                <i class="fab fa-facebook-f"></i> <!-- Facebook Icon -->
                            </a>
                            <a href="#" class="btn btn-outline-info">
                                <i class="fab fa-twitter"></i> <!-- Twitter Icon -->
                            </a>
                            <a href="#" class="btn btn-outline-success">
                                <i class="fab fa-telegram"></i> <!-- Telegram Icon -->
                            </a>
                        </div>
                    </div>

                </div>
            </div>
        </div>

        <!-- Бічна панель -->
        <div class="col-lg-4">
            <!-- Останні новини -->
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title mb-4">Останні новини</h5>
                    @foreach (var news in Model.RecentNews)
                    {
                        <div class="mb-3 pb-3 border-bottom">
                            <h6 class="mb-2">
                                <a asp-action="Details" asp-route-id="@news.Id" class="text-decoration-none text-dark">
                                    @news.Title
                                </a>
                            </h6>
                            <small class="text-muted">
                                <i class="far fa-calendar-alt"></i>
                                @news.PublishDate.ToString("dd.MM.yyyy")
                            </small>
                        </div>
                    }
                </div>
            </div>

            <!-- Додаткові блоки за потреби -->
        </div>
    </div>
</div>

@section Styles {
    <style>
        .news-content {
            font-size: 1.1rem;
            line-height: 1.8;
        }

        .news-content p {
            margin-bottom: 1.5rem;
        }
    </style>
}