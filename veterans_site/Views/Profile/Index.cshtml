                                    'rgba(75, 192, 192, 0.7)'
                                ]
                            }]
                        },
                        options: {
                            scales: {
                                y: {
                                    beginAtZero: true,
                                    ticks: {
                                        precision: 0
                                    }
                                }
                            }
                        }
                    }
                );

                new Chart(
                    document.getElementById('eventAttendanceChart').getContext('2d'),
                    {
                        type: 'bar',
                        data: {
                            labels: ['Зустріч', 'Тренінг', 'Майстер-клас', 'Соціальний захід'],
                            datasets: [{
                                label: '% заповненості',
                                data: data.eventAttendance.map(x => x.percentage),
                                backgroundColor: 'rgba(75, 192, 192, 0.7)'
                            }]
                        },
                        options: {
                            indexAxis: 'y',
                            scales: {
                                x: {
                                    beginAtZero: true,
                                    max: 100,
                                    title: { display: true, text: 'Відсоток заповненості' }
                                }
                            }
                        }
                    }
                );

                new Chart(
                    document.getElementById('userRegistrationChart').getContext('2d'),
                    {
                        type: 'line',
                        data: {
                            labels: data.userRegistrations.labels,
                            datasets: [{
                                label: 'Нові користувачі',
                                data: data.userRegistrations.data,
                                borderColor: 'rgba(153, 102, 255, 1)',
                                backgroundColor: 'rgba(153, 102, 255, 0.1)',
                                fill: true,
                                tension: 0.4
                            }]  
                        },
                        options: {
                            scales: {
                                y: {
                                    beginAtZero: true,
                                    ticks: {
                                        precision: 0
                                    }
                                }
                            }
                        }
                    }
                );
            }

            if (document.getElementById('consultationTypesChart')) {
                loadStatistics();
            }
        });
    </script>
