@using veterans_site.Extensions
@model Consultation
@{
    ViewData["Title"] = "Деталі консультації";
}

<div class="container mt-5">
    <div class="card shadow">
        <div class="card-body">
            <nav aria-label="breadcrumb" class="mb-4">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Profile" asp-action="Index">Мій профіль</a></li>
                    <li class="breadcrumb-item active">Деталі консультації</li>
                </ol>
            </nav>

            <div class="row">
                <div class="col-md-8">
                    <h1 class="h3 mb-4">@Model.Title</h1>

                    <div class="card mb-4">
                        <div class="card-body">
                            <h5 class="card-title">Опис консультації</h5>
                            <p class="card-text">@Model.Description</p>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="card mb-4">
                                <div class="card-body">
                                    <h5 class="card-title">Деталі консультації</h5>
                                    <ul class="list-unstyled">
                                        <li class="mb-2">
                                            <i class="far fa-calendar-alt"></i>
                                            <strong>Дата та час:</strong> @Model.DateTime.ToString("dd.MM.yyyy HH:mm")
                                        </li>
                                        <li class="mb-2">
                                            <i class="far fa-clock"></i>
                                            <strong>Тривалість:</strong> @Model.Duration хв
                                        </li>
                                        <li class="mb-2">
                                            <i class="fas fa-user-md"></i>
                                            <strong>Спеціаліст:</strong> @Model.SpecialistName
                                        </li>
                                        <li class="mb-2">
                                            <i class="fas fa-tag"></i>
                                            <strong>Тип:</strong> @Model.Type.GetDisplayName()
                                        </li>
                                        <li class="mb-2">
                                            <i class="fas fa-users"></i>
                                            <strong>Формат:</strong> @Model.Format.GetDisplayName()
                                        </li>
                                        <li class="mb-2">
                                            <i class="fas fa-money-bill-wave"></i>
                                            <strong>Ціна:</strong> @Model.Price.ToString("C")
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="mt-4">
                <a asp-controller="Profile" asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Назад до профілю
                </a>
                @if (Model.DateTime > DateTime.Now && Model.Status != ConsultationStatus.Cancelled)
                {
                    <form asp-controller="Consultations" asp-action="Cancel" method="post" class="d-inline"
                          onsubmit="return confirm('Ви впевнені, що хочете скасувати запис на консультацію?');">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="consultationId" value="@Model.Id" />
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-times"></i> Скасувати запис
                        </button>
                    </form>
                }
            </div>
        </div>
    </div>
</div>