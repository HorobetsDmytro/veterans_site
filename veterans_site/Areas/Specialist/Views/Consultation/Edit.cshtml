@model veterans_site.Models.Consultation
@{
    ViewData["Title"] = "Редагування консультації";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-body">
            <h1 class="card-title">Редагування консультації</h1>

            <form asp-action="Edit" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="SpecialistName" />

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Title" class="form-label">Назва</label>
                            <input asp-for="Title" class="form-control" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="DateTime" class="form-label">Дата та час</label>
                            <input asp-for="DateTime" type="datetime-local" class="form-control" />
                            <span asp-validation-for="DateTime" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Duration" class="form-label">Тривалість (хв)</label>
                            <input asp-for="Duration" type="number" min="1" max="480" class="form-control" />
                            <span asp-validation-for="Duration" class="text-danger"></span>
                            <small class="text-muted">Введіть тривалість у хвилинах (від 1 до 480)</small>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Type" class="form-label">Тип консультації</label>
                            <select asp-for="Type" class="form-select" asp-items="Html.GetEnumSelectList<ConsultationType>()">
                                <option value="">Виберіть тип консультації</option>
                            </select>
                            <span asp-validation-for="Type" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Format" class="form-label">Формат консультації</label>
                            <select asp-for="Format" class="form-select" asp-items="Html.GetEnumSelectList<ConsultationFormat>()">
                                <option value="">Виберіть формат консультації</option>
                            </select>
                            <span asp-validation-for="Format" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Mode" class="form-label">Формат проведення</label>
                            <select asp-for="Mode" class="form-select" asp-items="Html.GetEnumSelectList<ConsultationMode>()" id="consultationMode">
                                <option value="">Виберіть формат проведення</option>
                            </select>
                            <span asp-validation-for="Mode" class="text-danger"></span>
                        </div>

                        <div class="mb-3" id="locationGroup">
                            <label asp-for="Location" class="form-label">Місце проведення</label>
                            <input asp-for="Location" class="form-control" id="locationInput" />
                            <span asp-validation-for="Location" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Price" class="form-label">Ціна</label>
                            <input asp-for="Price" type="number" step="0.01" min="0" class="form-control" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Status" class="form-label">Статус</label>
                            <select asp-for="Status" class="form-select" asp-items="Html.GetEnumSelectList<ConsultationStatus>()">
                                <option value="">Виберіть статус</option>
                            </select>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>

                        <div class="mb-3" id="maxParticipantsGroup">
                            <label asp-for="MaxParticipants" class="form-label">Максимум учасників</label>
                            <input asp-for="MaxParticipants" type="number" class="form-control" min="1" />
                            <span asp-validation-for="MaxParticipants" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Опис</label>
                            <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">Зберегти</button>
                    <a asp-action="Index" class="btn btn-secondary">Назад до списку</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var modeSelect = document.getElementById('consultationMode');
            var locationInput = document.getElementById('locationInput');
            var locationGroup = document.getElementById('locationGroup');
            var formatSelect = document.getElementById('Format');
            var maxParticipantsGroup = document.getElementById('maxParticipantsGroup');

            function updateLocationVisibility() {
                if (modeSelect.value === '1') { // Offline
                    locationGroup.style.display = 'block';
                    locationInput.required = true;
                } else {
                    locationGroup.style.display = 'none';
                    locationInput.required = false;
                    locationInput.value = '';
                }
            }

            function updateMaxParticipantsVisibility() {
                if (formatSelect.value === '1') { // Group
                    maxParticipantsGroup.style.display = 'block';
                } else {
                    maxParticipantsGroup.style.display = 'none';
                }
            }

            updateLocationVisibility();
            updateMaxParticipantsVisibility();

            modeSelect.addEventListener('change', updateLocationVisibility);
            formatSelect.addEventListener('change', updateMaxParticipantsVisibility);
        });
    </script>
}