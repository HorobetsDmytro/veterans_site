@model IEnumerable<veterans_site.Models.Event>

@{
    ViewData["Title"] = "Події";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3">Події</h1>
        <a class="btn btn-primary" asp-area="Admin" asp-controller="Event" asp-action="Create">Створити нову подію</a>
    </div>


    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">@item.Title</h5>
                        <p class="card-text">@item.Description</p>
                        <ul class="list-unstyled text-muted mb-4">
                            <li><i class="far fa-calendar-alt"></i> @item.Date.ToString("dd.MM.yyyy HH:mm")</li>
                            <li><i class="fas fa-map-marker-alt"></i> @item.Location</li>
                            @if (item.MaxParticipants.HasValue)
                            {
                                <li><i class="fas fa-users"></i> Максимум учасників: @item.MaxParticipants</li>
                            }
                        </ul>
                        <div class="d-flex gap-2">
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-link text-primary">Деталі</a>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-link text-success">Редагувати</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-link text-danger">Видалити</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
