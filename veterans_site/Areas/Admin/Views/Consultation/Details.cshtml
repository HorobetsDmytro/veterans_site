@model veterans_site.Models.Consultation
@using veterans_site.Extensions
@{
    ViewData["Title"] = "Деталі консультації";
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-body">
            <h1 class="h3 mb-4">@Model.Title</h1>

            <div class="row g-4">
                <div class="col-md-6">
                    <h2 class="h5 mb-3">Деталі консультації</h2>
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <strong>Дата та час:</strong>
                            @Model.DateTime.ToString("dd.MM.yyyy HH:mm")
                        </li>
                        <li class="mb-2">
                            <strong>Тривалість:</strong>
                            @Model.Duration хв
                        </li>
                        <li class="mb-2">
                            <strong>Тип консультації:</strong>
                            @Model.Type.GetDisplayName()
                        </li>
                        <li class="mb-2">
                            <strong>Формат:</strong>
                            @Model.Format.GetDisplayName()
                        </li>
                        <li class="mb-2">
                            <strong>Спеціаліст:</strong>
                            @Model.SpecialistName
                        </li>
                        <li class="mb-2">
                            <strong>Ціна:</strong>
                            @Model.Price.ToString("C")
                        </li>
                        @if (Model.MaxParticipants.HasValue)
                        {
                            <li class="mb-2">
                                <strong>Максимум учасників:</strong>
                                @Model.MaxParticipants
                            </li>
                        }
                        <li class="mb-2">
                            <strong>Статус:</strong> @Model.Status.GetDisplayName()
                        </li>
                    </ul>
                </div>

                <div class="col-md-6">
                    <h2 class="h5 mb-3">Опис</h2>
                    <p class="text-muted">@Model.Description</p>
                </div>
            </div>

            <div class="mt-4 d-flex gap-3">
                <a asp-action="Index" class="btn btn-secondary">Назад до списку</a>
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Редагувати</a>
            </div>
        </div>
    </div>
</div>