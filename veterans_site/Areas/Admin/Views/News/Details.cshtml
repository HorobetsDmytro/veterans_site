@* News/Details.cshtml *@
@model veterans_site.Models.News
@{
    ViewData["Title"] = "Деталі новини";
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-body">
            <h1 class="h3 mb-4">@Model.Title</h1>

            <div class="row g-4">
                <div class="col-md-6">
                    <h2 class="h5 mb-3">Деталі новини</h2>
                    <ul class="list-unstyled">
                        <li>
                            <strong>Дата публікації:</strong>
                            @Model.PublishDate.ToString("dd.MM.yyyy HH:mm")
                        </li>
                    </ul>
                    @if (!string.IsNullOrEmpty(Model.ImagePath))
                    {
                        <img src="@Model.ImagePath" class="img-fluid mt-3 rounded" alt="@Model.Title" />
                    }
                </div>

                <div class="col-md-6">
                    <h2 class="h5 mb-3">Опис</h2>
                    <p class="text-muted">@Model.Content</p>
                </div>
            </div>

            <div class="mt-4 d-flex gap-3">
                <a asp-action="Index" class="btn btn-secondary">Назад до списку</a>
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Редагувати</a>
            </div>
        </div>
    </div>
</div>