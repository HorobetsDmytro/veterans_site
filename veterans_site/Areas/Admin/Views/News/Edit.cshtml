@model veterans_site.Models.News
@{
    ViewData["Title"] = "Редагування новини";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-body">
            <h1 class="card-title">Редагування новини</h1>

            <form asp-action="Edit" asp-controller="News" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="ImagePath" />

                <div class="row g-3">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Title" class="form-label">Заголовок</label>
                            <input asp-for="Title" class="form-control" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="PublishDate" class="form-label">Дата публікації</label>
                            <input asp-for="PublishDate" type="datetime-local" class="form-control" />
                            <span asp-validation-for="PublishDate" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Нове зображення</label>
                            <input type="file" name="imageFile" class="form-control" />
                            <small class="text-muted">Залиште порожнім, щоб зберегти поточне зображення</small>
                        </div>

                        @if (!string.IsNullOrEmpty(Model.ImagePath))
                        {
                            <div class="mb-3">
                                <label class="form-label">Поточне зображення</label>
                                <img src="@Model.ImagePath" class="img-fluid rounded" style="max-width: 200px;" alt="@Model.Title" />
                            </div>
                        }
                    </div>

                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Content" class="form-label">Контент</label>
                            <textarea asp-for="Content" class="form-control" rows="10"></textarea>
                            <span asp-validation-for="Content" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">Зберегти</button>
                    <a asp-action="Index" class="btn btn-secondary">Назад до списку</a>
                </div>
            </form>
        </div>
    </div>
</div>